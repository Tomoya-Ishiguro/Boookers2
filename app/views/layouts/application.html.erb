<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

　　<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="background-color:black;">
    <div class="container">
      <a class="navbar-brand " href="/">Bookers</a>



    <div id="slidemenu">
       <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn" text="text-muted">

        <% if user_signed_in? %>
           <li class="">
             <%= link_to(current_user) do %><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home<% end %>
           </li>
           <li class="">
            <%= link_to(users_path) do %><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Users<% end %>
           </li>
           <li class="">
            <%= link_to(books_path) do %><span class="glyphicon glyphicon-book" aria-hidden="true"></span> Books<% end %>
           </li>
           <li class="">
            <%= link_to(destroy_user_session_path, method: :delete ) do %><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span> logout<% end %>
           </li>
        <% else %>

           <li class="">
             <%= link_to(root_path) do %><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Home<% end %>
           </li>
           <li class="">
             <%= link_to(home_about_path) do %><span class="glyphicon glyphicon-link" aria-hidden="true"></span> About<% end %>
           </li>
            <li class="">
             <%= link_to(new_user_registration_path) do %><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> sign up<% end %>
            </li>
            <li class="">
             <%= link_to(new_user_session_path) do %><span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> login<% end %>
            </li>
        <% end %>
      </ul>
    </div>
    </div>
</nav>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

    <%= yield %>
    <br>
<div class="col-md-8 col-md-offset-2">
  <p class="text-right">CopyRight Infratop.inc</p>
</div>

  </body>

</html>