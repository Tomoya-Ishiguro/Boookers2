<h2>New book</h2>
<%= form_for(@book) do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title, class: "col-lg-12" %>

  <h4>Opinion</h4>
  <%= f.text_area :body, class: "col-lg-12" %>

  <br>
  <%= f.submit "Create Book", class: "btn btn-primary col-lg-12 createbook" %>

<% end %>

</div>


<div class="col-lg-9">

<h2>Books</h2>

<table class = "table table-striped">
  <thead>
   <tr>
   	<th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
   </tr>
  </thead>


<tbody>
<% @user.books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
    <td><%= link_to(book.title, "/books/#{book.id}") %></td>
