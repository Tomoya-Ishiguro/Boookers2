<% if @book_new.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book_new.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @book_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!--部分テンプレート-->
<div class="col-xs-3">
   <h2>User info</h2>
    <table class="table">
    <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></tr>
  <tr>
  <th>name <%= @user.name %></th>
</tr>
<tr>
<th>Introduction <%= @user.introduction %></th>
</tr>
</table>

<div class="row">
  <% if @user.id == current_user.id %>
        <%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% end %>
</div>

<h2>New book</h2>

<%= form_for(@book_new) do |f| %>
<div class="field row">
  <label>Title</label>
  <%= f.text_field :title, class:"col-xs-12 book_title" %>
</div>

<div class="field row">
  <label>Opinion</label>
  <%= f.text_area :body, class:"col-xs-12 book_body" %>
</div>

<div class="actions row">
  <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
</div>
<% end %>

</div>
<!-- ここまで -->

<div class='col-xs-9'>
<h2>Book detail</h2>
<table class='table'>
  <tr>
<td>
<%= attachment_image_tag(@book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg") %>
<%= link_to @book.user.name, user_path(@book.user) %><br>
</td>
 <td><%= link_to '' do %>
   <%= @book.title %></td>
 <% end %>
<td><%= @book.body %></td>

<!-- いいね機能実装時に追加した箇所 -->
<!-- ハートマークが表示されないのはなんで？ -->
<td>
<% if @book.favorited_by?(current_user) %>
<li>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                <%= @book.favorites.count %>いいね
                <% end %>
<li>
            <% else %>
<li>
                <%= link_to book_favorites_path(@book), method: :post do %>
                <i class="fa fa-heart-o" aria-hidden="true"></i>
                <%= @book.favorites.count %>いいね
                <% end %>
            <% end %>
</li>
</td>
<!-- ここまで -->

　　　　　　<!--削除ボタンと編集ボタンの設置 -->
    <% if @book.user.id == current_user.id %>
    <td><%= link_to 'Edit', edit_book_path(@book), class:"btn-sm btn-success" %></td>

    <td><%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "Are you sure?", class:"btn-sm btn-danger" %></td>
    <% end %>
    </tr>
</table>

  </div>
</div>
</div>
</div>