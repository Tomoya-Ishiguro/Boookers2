 <% if @book.errors.any? %>
    <div id="error_explanation">
      <ul>
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
<div class="row">

<div class="col-lg-3">
<%= render 'books/list', book: @book , user: current_user %>
</div>

<div class="col-lg-9">

<h2>Books</h2>

<table class = "table table-striped">

 <thead>
   <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
   </tr>
  </thead>


<% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
  </tr>

<% end %>

</table>

</div>
</div>
</div>