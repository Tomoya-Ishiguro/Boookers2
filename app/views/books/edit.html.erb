<h1>Editing Book</h1>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<div><h4>Title</h4>
	<%= f.text_field :title %></div>

	<div><h4>Body</h4>
	<%= f.text_area :body %></div>
	<%= f.submit 'Update Book' %>
<% end %>

<%= link_to "show", book_path(@book) %>
